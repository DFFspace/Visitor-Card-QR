<?xml version="1.0" encoding="utf-8" ?>
<winuiex:WindowEx
    x:Class="Visitor.Card.QR.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Visitor.Card.QR"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiex="using:WinUIEx"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="titleBar" Grid.Row="0">
            <StackPanel
                Margin="16,8,8,8"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Image Source="/Assets/qr-code.ico" />
                <TextBlock
                    Margin="12,0,0,0"
                    FontSize="12"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Visitor Card QR" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel>

                <controls:WrapPanel Grid.Row="1" Orientation="Vertical">
                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Firstname" />
                        <TextBox
                            x:Name="FirstNameBox"
                            PlaceholderText="Fill in firstname..."
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Lastname" />
                        <TextBox
                            x:Name="LastNameBox"
                            PlaceholderText="Fill in lastname..."
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Full name" />
                        <TextBox
                            x:Name="FullNameBox"
                            PlaceholderText="Fill in full name..."
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Function / Title" />
                        <TextBox
                            x:Name="FunctionBox"
                            PlaceholderText="Fill in function or title..."
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Phone (Mobile)" />
                        <TextBox
                            x:Name="PhoneBox"
                            PlaceholderText="+316"
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Email" />
                        <TextBox
                            x:Name="EmailBox"
                            PlaceholderText="@example.nl"
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="320" Spacing="4">
                        <TextBlock Text="Website" />
                        <TextBox
                            x:Name="WebsiteBox"
                            PlaceholderText="https://www.example.nl/"
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>
                </controls:WrapPanel>

                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">
                    <ComboBox
                        x:Name="EccCombo"
                        Width="100"
                        Header="ECC"
                        SelectionChanged="OnEccChanged">
                        <ComboBoxItem Content="L" />
                        <ComboBoxItem Content="M" IsSelected="True" />
                        <ComboBoxItem Content="Q" />
                        <ComboBoxItem Content="H" />
                    </ComboBox>

                    <Slider
                        x:Name="SizeSlider"
                        Width="220"
                        Header="Size (Pixels)"
                        Maximum="1024"
                        Minimum="128"
                        ValueChanged="OnSizeChanged"
                        Value="256" />

                    <StackPanel Width="140" Spacing="4">
                        <TextBlock Text="Color QR Code (hex)" />
                        <TextBox
                            x:Name="DarkHexBox"
                            Text="#5A8062"
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <StackPanel Width="160" Spacing="4">
                        <TextBlock Text="Color Background (hex)" />

                        <TextBox
                            x:Name="LightHexBox"
                            IsEnabled="False"
                            Text="#FFFFFF"
                            TextChanged="AnyFieldChanged" />
                    </StackPanel>

                    <CheckBox
                        x:Name="TransparentBgCheck"
                        Checked="OnTransparentToggled"
                        Content="Transparent background"
                        IsChecked="True"
                        Unchecked="OnTransparentToggled" />

                    <Button
                        x:Name="SaveButton"
                        Click="OnSaveClicked"
                        Content="Save PNG..." />
                </StackPanel>
            </StackPanel>

            <Border
                Grid.Row="2"
                Margin="0,16,0,0"
                Padding="12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="12">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Image
                        x:Name="PreviewImage"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Stretch="None" />
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</winuiex:WindowEx>
